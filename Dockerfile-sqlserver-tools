FROM mcr.microsoft.com/mssql/server:2022-latest

USER root

# Instalar dependências básicas
RUN apt-get update && \
    apt-get install -y curl gnupg2

# Adicionar repositório Microsoft
RUN curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/ubuntu/20.04/prod.list > /etc/apt/sources.list.d/mssql-release.list

# Remover pacotes ODBC conflitantes antes de instalar os novos
RUN apt-get remove -y --purge libodbc2 libodbcinst2 unixodbc-common odbcinst 2>/dev/null || true

# Limpar e atualizar
RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    apt-get update

# Instalar mssql-tools18 (já inclui ODBC)
RUN ACCEPT_EULA=Y apt-get install -y mssql-tools18

# Adicionar ao PATH
RUN echo 'export PATH="$PATH:/opt/mssql-tools18/bin"' >> ~/.bashrc && \
    echo 'export PATH="$PATH:/opt/mssql-tools18/bin"' >> /etc/profile.d/mssql-tools.sh

# Verificar instalação
RUN echo "=== Ferramentas instaladas ===" && \
    ls -la /opt/mssql-tools18/bin/ && \
    echo "=== Versão do sqlcmd ===" && \
    /opt/mssql-tools18/bin/sqlcmd -? | head -5

# Voltar para o usuário mssql
USER mssql
